@model TALENTSPHERE.Models.User

<style>
    body {
        margin: 0;
        font-family: Arial, sans-serif;
        display: flex;
        height: 100vh;
    }

    /* Левое меню */
    .sidebar {
        position: fixed; /* фиксировано при прокрутке */
        top: 0;
        left: 0;
        width: 25%;
        height: 100%;
        background-color: #fff;
        border-right: 1px solid #ccc;
        padding: 20px;
        box-sizing: border-box;
        overflow-y: auto; /* при необходимости */
    }

        .sidebar button {
            display: block;
            width: 100%;
            margin-bottom: 10px;
            padding: 10px 15px;
            font-size: 14px;
            cursor: pointer;
            background-color: #f0f0f0;
            border: none;
            border-radius: 4px;
            text-align: left;
            transition: background-color 0.2s;
        }

            .sidebar button:hover {
                background-color: #e0e0e0;
            }

    /* Основная область */
    .content {
        margin-left: 25%; /* чтобы не перекрывать левое меню */
        width: 75%;
        height: 100vh;
        overflow-y: auto;
        padding: 20px;
        box-sizing: border-box;
    }

    .section {
        margin-bottom: 50px;
    }

        .section h2 {
            margin-top: 0;
        }

    /* Поля формы */
    .field-group {
        margin-bottom: 15px;
    }

        .field-group label {
            display: block;
            font-weight: bold;
            margin-bottom: 5px;
        }

        .field-group input,
        .field-group textarea {
            width: 100%;
            padding: 8px;
            box-sizing: border-box;
        }

    /* Кнопка "Применить" */
    .apply-btn {
        background-color: #436fea;
        color: #fff;
        border: none;
        padding: 10px 20px;
        border-radius: 4px;
        cursor: pointer;
    }

        .apply-btn:hover {
            background-color: #3651c3;
        }
</style>

<body>

    <!-- Левая панель навигации -->
    <div class="sidebar" id="sidebar">
        <button data-target="general">Общие</button>
        <button data-target="name">Имя</button>
        <button data-target="surname">Фамилия</button>
        <button data-target="login">Логин</button>
        <button data-target="description">Описание</button>
        <button data-target="photo">Фото</button>
        <button data-target="cover">Обложка</button>
        <button data-target="specialties">Специальности</button>
    </div>

    <!-- Основная часть контента -->
    <div class="content" id="content">
        <!-- Разделы -->
        <div class="section" id="general">
            <h2>Общие настройки</h2>
            <p>Здесь могут быть общие настройки профиля.</p>
        </div>

        <div class="section" id="name">
            <h2>Имя</h2>
            <form asp-action="Settings" method="post">
                <input type="hidden" name="FieldName" value="name" />
                <input type="text" name="inputValue" id="name-input" placeholder="@Model.Name" value="@Model.Name" />
                <button type="submit" class="apply-btn">Применить</button>
            </form>
        </div>

        <div class="section" id="surname">
            <h2>Фамилия</h2>
            <form asp-action="Settings" method="post">
                <!-- Передача идентификатора поля -->
                <input type="hidden" name="FieldName" value="surname" />
                <!-- Вводное поле -->
                <input type="text" name="inputValue" id="surname-input" placeholder="@Model.Surname" value="@Model.Surname" />
                <button type="submit" class="apply-btn">Применить</button>
            </form>
        </div>

        <div class="section" id="login">
            <h2>Логин</h2>
            <label>@ViewData["LoginMessage"]</label>
            <form asp-action="Settings" method="post">
                <!-- Передача идентификатора поля -->
                <input type="hidden" name="FieldName" value="login" />
                <!-- Вводное поле -->
                <input type="text" name="inputValue" id="login-input" placeholder="@Model.Login" value="@Model.Login" />
                <button type="submit" class="apply-btn">Применить</button>
            </form>
        </div>

        <div class="section" id="description">
            <h2>Описание профиля</h2>
            <form asp-action="Settings" method="post">
                <!-- Передача идентификатора поля -->
                <input type="hidden" name="FieldName" value="description" />
                <!-- Многострочное поле -->
                <div class="field-group">
                    <label for="desc-input">Описание:</label>
                    <textarea id="desc-input" rows="4" name="inputValue" placeholder="Расскажите о себе">@Model.Description</textarea>
                </div>
                <button type="submit" class="apply-btn">Применить</button>
            </form>
        </div>

        <div class="section" id="photo">
            <h2>Фото</h2>
            <div class="field-group">
                <label for="photo-input">Загрузить фото:</label>
                <input type="file" id="photo-input" />
            </div>
                <button class="apply-btn" name="FieldName" value="">Применить</button>
        </div>

        <div class="section" id="cover">
            <h2>Фото</h2>
            <div class="field-group">
                <label for="photo-input">Загрузить обложку:</label>
                <input type="file" id="photo-input" />
            </div>
            <button class="apply-btn" onclick="alert('Фото обновлено')">Применить</button>
        </div>

        <div class="section" id="specialties">
            <h2>Специальности</h2>
            <div class="field-group">
                <label for="specialties-input">Добавьте ваши специализации:</label>
                <input type="text" id="specialties-input" placeholder="Например: веб-дизайн" />
            </div>
            <button class="apply-btn" onclick="alert('Специализации сохранены')">Применить</button>
        </div>


    </div>
    <script>
        // Скрипт для прокрутки к разделам по кнопкам
        document.querySelectorAll('.sidebar button').forEach(btn => {
            btn.addEventListener('click', () => {
                const targetId = btn.getAttribute('data-target');
                const targetSection = document.getElementById(targetId);
                if (targetSection) {
                    targetSection.scrollIntoView({ behavior: 'smooth', block: 'start' });
                }
            });
        });
    </script>

</body>
