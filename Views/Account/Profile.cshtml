@model TALENTSPHERE.Models.ShortUserViewModel

<body>

    <!-- Обложка -->
    <div class="cover">
        <!-- Кнопка "Настройки" -->
        <button class="settings-btn" onclick="alert('Перейти к настройкам')">Настройки</button>
    </div>

    <!-- Рамка с аватаркой -->
    <div class="avatar-wrapper">
        <img src="https://via.placeholder.com/100" alt="Аватар" class="avatar" />
    </div>

    <!-- Основной блок с информацией -->
    <div class="profile-container">
        <!-- Левая часть -->
        <div class="profile-info">
            <div class="name-section">
                <div class="name">Иван Иванов</div>
                <div class="rating" title="Рейтинг: 4.8 из 5">⭐ 4.8</div>
            </div>
            <div class="position">Веб-дизайнер</div>
            <div class="description">
                Пример описания профиля: опытный дизайнер с 5-летним стажем. Помогу вам красиво оформить ваш сайт или проект. В портфолио — множество завершенных проектов и довольных клиентов.
            </div>
        </div>
    </div>

</body>