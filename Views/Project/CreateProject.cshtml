    <div id="step2" class="step-content active">
        <div class="form-section glass-card">
            <h2 class="section-title">Бюджет и сроки</h2>

            <div class="form-group">
                <label class="form-label">
                    <i class="fas fa-pen-fancy" style="color: var(--neon-purple);"></i>
                    Общий срок
                </label>
                <select asp-for="Duration" class="form-select" id="duration">
                    <option selected disabled>Выберите срок</option>
                    <option value="day1">1 день</option>
                    <option value="days2">2 дня</option>
                    <option value="days3">3 дня</option>
                    <option value="days5">5 дней</option>
                    <option value="week1">1 неделя</option>
                    <option value="days10">10 дней</option>
                    <option value="weeks2">2 недели</option>
                    <option value="weeks3">3 недели</option>
                    <option value="month1">Месяц</option>
                    <option value="months2">2 месяца</option>
                    <option value="more_than_3_months">Более 3 месяцев</option>
                </select>
            </div>

            <div class="form-group">
                <label class="form-label">
                    <i class="fas fa-pen-fancy" style="color: var(--neon-purple);"></i>
                    Бюджет от (USD)

                    <input asp-for="BudgetFrom" type="number" class="form-textarea glass-card" rows="8" />
            </div>
            <div class="form-group">
                <label class="form-label">
                    <i class="fas fa-pen-fancy" style="color: var(--neon-purple);"></i>
                    Бюджет до (USD)

                    <input asp-for="BudgetTo" type="number" class="form-textarea glass-card" rows="8" />
            </div>


            <label class="form-label">Тип оплаты</label>
            <div class="form-group">
                <div class="d-flex gap-3">
                    <div class="form-check">
                        <input class="form-check-input"
                               type="radio"
                               name="PaymentType"
                               id="fix"
                               value="fix_value"
                               checked>
                        <label class="form-check-label" for="fix">Фиксированная</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input"
                               type="radio"
                               name="PaymentType"
                               id="hour"
                               value="hour_value">
                        <label class="form-check-label" for="hour">Почасовая</label>
                    </div>
                </div>
            </div>
        </div>
