@model TALENTSPHERE.Models.ViewModels.ProjectCreateViewModel

<link rel="stylesheet" href="~/css/create-project.css">

<form method="post" asp-action="CreateProject">

    <div id="step1" class="step-content active">
        <div class="form-section glass-card">
            <h2 class="section-title">Основная информация</h2>

            <div class="form-group">
                <label class="form-label">
                    <i class="fas fa-pen-fancy" style="color: var(--neon-purple);"></i>
                    Название
                </label>
                <input asp-for="Name" type="text" class="form-textarea glass-card" rows="8"
                       placeholder="Придумайте интригующее название" />
                <span asp-validation-for="Name"></span>
            </div>

            <div class="form-group">
                <label class="form-label">
                    <i class="fas fa-pen-fancy" style="color: var(--neon-purple);"></i>
                    Направление
                    <select asp-for="Category" asp-items="@(new SelectList(ViewBag.Categories))">
                        <option value="">Выберите категорию</option>
                    </select>
            </div>

            <div class="form-group">
                <label class="form-label">
                    <i class="fas fa-pen-fancy" style="color: var(--neon-purple);"></i>
                    Тэги
                </label>
                <input asp-for="Skills" type="text" class="form-textarea glass-card" rows="8"
                       placeholder="c#, html, css" />
            </div>

            <div class="form-group">
                <label class="form-label">
                    <i class="fas fa-pen-fancy" style="color: var(--neon-purple);"></i>
                    Детальное описание проекта
                </label>
                <textarea asp-for="Description" class="form-textarea glass-card" rows="8"
                          placeholder="Опишите цели, целевую аудиторию, ожидания..."></textarea>
                <span asp-validation-for="Description"></span>

                <div class="ai-suggestion-box">
                    <button class="btn-ai-assist neon-button-small" type="button">
                        <i class="fas fa-magic"></i> AI-помощник для ТЗ
                    </button>
                    <span class="form-hint" style="margin: 0;">Нажмите, чтобы AI помог сформулировать мысли</span>
                </div>
            </div>

