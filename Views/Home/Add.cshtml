@model TALENTSPHERE.Models.UserCreateViewModel

<form asp-action="Add" method="post">
    <div>
        <label asp-for="Login"></label>
        <input asp-for="Login" />
    </div>
    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name" />
    </div>
    <div>
        <label asp-for="Surname"></label>
        <input asp-for="Surname" />
    </div>
    <div>
        <label asp-for="Email"></label>
        <input asp-for="Email" type="email" />
    </div>
    <div>
        <label asp-for="Password"></label>
        <input asp-for="Password" type="password" />
    </div>
    <div>
        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" />
    </div>
    <div>
        <label asp-for="Description"></label>
        <textarea asp-for="Description"></textarea>
    </div>
    <div>
        <label asp-for="PhotoUrl"></label>
        <input asp-for="PhotoUrl" />
    </div>
    <div>
        <label asp-for="CoverUrl"></label>
        <input asp-for="CoverUrl" />
    </div>
    <div>
        <label asp-for="VideoCardUrl"></label>
        <input asp-for="VideoCardUrl" />
    </div>
    <div>
        <label asp-for="Specialties"></label>
        <select asp-for="Specialties" multiple>
            <!-- Здесь заранее подготовленные опции, или динамически -->
        </select>
    </div>
    <div>
        <label asp-for="Role"></label>
        <select asp-for="Role" asp-items="Model.Roles"></select>
    </div>
    <button type="submit">Создать</button>
</form>