@model TALENTSPHERE.Models.DashboardViewModel

<body class="dashboard-page">

    <div class="mobile-header">
        <button class="mobile-menu-btn" id="mobileSidebarToggle">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
                 stroke-linecap="round" stroke-linejoin="round">
                <line x1="3" y1="12" x2="21" y2="12"></line>
                <line x1="3" y1="6" x2="21" y2="6"></line>
                <line x1="3" y1="18" x2="21" y2="18"></line>
            </svg>
        </button>
        <span class="mobile-logo-text">TalentSphere</span>
        <div class="mobile-avatar"></div>
    </div>

    <!-- Sidebar Overlay -->
    <div class="sidebar-overlay" id="sidebarOverlay"></div>

    <!-- Sidebar Navigation -->
    <aside class="sidebar glass-effect" id="dashboardSidebar">
        <div class="sidebar-header">
            <a href="index.html" class="logo" style="text-decoration: none; color: inherit;">
                <div class="logo-icon neon-glow-purple"></div>
                <span class="logo-text">TalentSphere</span>
            </a>
        </div>

        <nav class="sidebar-nav">
            <a href="dashboard.html" class="nav-item active">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
                     stroke-linecap="round" stroke-linejoin="round">
                    <rect width="7" height="9" x="3" y="3" rx="1" />
                    <rect width="7" height="5" x="14" y="3" rx="1" />
                    <rect width="7" height="9" x="14" y="12" rx="1" />
                    <rect width="7" height="5" x="3" y="16" rx="1" />
                </svg>
                <span>Дашборд</span>
            </a>
            <a href="find-executors.html" class="nav-item">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
                     stroke-linecap="round" stroke-linejoin="round">
                    <circle cx="11" cy="11" r="8"></circle>
                    <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
                </svg>
                <span>Поиск исполнителей</span>
            </a>
            <a href="team-project.html" class="nav-item">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
                     stroke-linecap="round" stroke-linejoin="round">
                    <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                    <circle cx="9" cy="7" r="4"></circle>
                    <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                    <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                </svg>
                <span>Командный проект</span>
            </a>
            <a href="marketplace.html" class="nav-item">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
                     stroke-linecap="round" stroke-linejoin="round">
                    <rect width="20" height="14" x="2" y="7" rx="2" ry="2" />
                    <path d="M16 21V5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16" />
                </svg>
                <span>Проекты</span>
            </a>
            <a href="my-work.html" class="nav-item">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
                     stroke-linecap="round" stroke-linejoin="round">
                    <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                    <polyline points="22 4 12 14.01 9 11.01"></polyline>
                </svg>
                <span>Управление работой</span>
            </a>
            <a href="profile.html" class="nav-item">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
                     stroke-linecap="round" stroke-linejoin="round">
                    <path d="M19 21v-2a4 4 0 0 0-4-4H9a4 4 0 0 0-4 4v2" />
                    <circle cx="12" cy="7" r="4" />
                </svg>
                <span>Профиль</span>
            </a>
            <a href="wallet.html" class="nav-item">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
                     stroke-linecap="round" stroke-linejoin="round">
                    <path d="M19 7V4a1 1 0 0 0-1-1H5a2 2 0 0 0 0 4h15a1 1 0 0 1 1 1v4h-3a2 2 0 0 0 0 4h3a1 1 0 0 0 1-1v-2a1 1 0 0 0-1-1" />
                    <path d="M3 5v14a2 2 0 0 0 2 2h15a1 1 0 0 0 1-1v-4" />
                </svg>
                <span>Кошелек</span>
            </a>
            <a href="messages.html" class="nav-item">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
                     stroke-linecap="round" stroke-linejoin="round">
                    <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z" />
                </svg>
                <span>Сообщения</span>
                <span class="badge neon-glow-pink">3</span>
            </a>
            <a href="education.html" class="nav-item">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
                     stroke-linecap="round" stroke-linejoin="round">
                    <path d="M21.42 10.922a1 1 0 0 0-.019-1.838L12.83 5.18a2 2 0 0 0-1.66 0L2.6 9.08a1 1 0 0 0 0 1.832l8.57 3.908a2 2 0 0 0 1.66 0z" />
                    <path d="M22 10v6" />
                    <path d="M6 12.5V16a6 3 0 0 0 12 0v-3.5" />
                </svg>
                <span>Обучение</span>
            </a>
            <a href="settings.html" class="nav-item">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
                     stroke-linecap="round" stroke-linejoin="round">
                    <path d="M12.22 2h-.44a2 2 0 0 0-2 2v.18a2 2 0 0 1-1 1.73l-.43.25a2 2 0 0 1-2 0l-.15-.08a2 2 0 0 0-2.73.73l-.22.38a2 2 0 0 0 .73 2.73l.15.1a2 2 0 0 1 1 1.72v.51a2 2 0 0 1-1 1.74l-.15.09a2 2 0 0 0-.73 2.73l.22.38a2 2 0 0 0 2.73.73l.15-.08a2 2 0 0 1 2 0l.43.25a2 2 0 0 1 1 1.73V20a2 2 0 0 0 2 2h.44a2 2 0 0 0 2-2v-.18a2 2 0 0 1 1-1.73l.43-.25a2 2 0 0 1 2 0l.15.08a2 2 0 0 0 2.73-.73l.22-.39a2 2 0 0 0-.73-2.73l-.15-.1a2 2 0 0 1-1-1.72v-.51a2 2 0 0 1 1-1.74l.15-.09a2 2 0 0 0 .73-2.73l-.22-.38a2 2 0 0 0-2.73-.73l-.15.08a2 2 0 0 1-2 0l-.43-.25a2 2 0 0 1-1-1.73V4a2 2 0 0 0-2-2z" />
                    <circle cx="12" cy="12" r="3" />
                </svg>
                <span>Настройки</span>
            </a>
        </nav>

        <div class="sidebar-footer">
            <div class="user-profile glass-card">
                <div class="user-avatar neon-glow-blue"></div>
                <div class="user-info">
                    <div class="user-name">@Model.Login</div>
                    <div class="user-status">@Model.Email</div>
                </div>
            </div>
        </div>
    </aside>

    <!-- Main Content -->
    <main class="main-content">
        <!-- Global Header -->
        <header class="global-header">
            <div class="global-header-left">
                <!-- Global Search -->
                <div class="global-search-bar">
                    <svg width="20" height="20" viewBox="0 0 20 20" fill="none" class="search-icon">
                        <circle cx="9" cy="9" r="6" stroke="currentColor" stroke-width="2" />
                        <path d="M17 17L13 13" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
                    </svg>
                    <input type="text" placeholder="Поиск проектов, фрилансеров..." class="global-search-input">
                </div>
            </div>

            <div class="global-header-right">
                <!-- Notifications -->
                <button class="header-icon-btn" id="notificationsBtn">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M18 8A6 6 0 0 0 6 8c0 7-3 9-3 9h18s-3-2-3-9" />
                        <path d="M13.73 21a2 2 0 0 1-3.46 0" />
                    </svg>
                    <span class="notification-badge">3</span>
                </button>

                <!-- Wallet -->
                <button class="header-icon-btn" id="walletBtn">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <rect x="1" y="4" width="22" height="16" rx="2" ry="2" />
                        <line x1="1" y1="10" x2="23" y2="10" />
                    </svg>
                    <span class="wallet-balance">$2,450</span>
                </button>

                <!-- User Avatar -->
                <div class="header-user-avatar">
                    <div class="avatar-image">@Model.Name.Substring(0, 1) @Model.Surname.Substring(0, 1)</div>
                </div>
            </div>
        </header>

        <!-- Page Header -->
        <!-- Page Header -->
        <div class="page-header welcome-banner">
            <div class="header-left">
                <h1 class="page-title">Добро пожаловать, <span class="gradient-text">@Model.Name</span>!</h1>
                <div class="header-stats">
                    <div class="stat-badge">
                        <i class="fas fa-project-diagram"></i>
                        <span>3 Активных проекта</span>
                    </div>
                    <div class="stat-badge">
                        <i class="fas fa-wallet"></i>
                        <span>Бюджет: $12,450</span>
                    </div>
                    <div class="stat-badge">
                        <i class="fas fa-users"></i>
                        <span>Команда: 12</span>
                    </div>
                </div>
            </div>
            <div class="header-right-actions">
                <button class="btn-create" onclick="window.location.href='create-project.html'">
                    <i class="fas fa-plus"></i> Создать проект
                </button>
            </div>
        </div>

        <!-- 3-Column Grid (ТЗ: 30% + 50% + 20%) -->
        <div class="dashboard-grid-3col">

            <!-- LEFT COLUMN (30%) - Статистика + AI-рекомендации -->
            <!-- LEFT COLUMN (30%) - AI-рекомендации -->
            <aside class="dashboard-left">
                <section class="ai-recommendations">
                    <h3 class="section-title-compact">🤖 AI Рекомендует</h3>

                    <!-- Freelancers -->
                    <div class="recommendation-group">
                        <h4 class="group-title"
                            style="margin-bottom: 15px; font-size: 14px; color: var(--text-secondary);">
                            Рекомендуемые
                            исполнители
                        </h4>

                        <div class="freelancer-card glass-card">
                            <div class="freelancer-video">
                                <img src="https://images.unsplash.com/photo-1573496359142-b8d87734a5a2?w=400"
                                     alt="Video">
                                <div class="play-icon"><i class="fas fa-play"></i></div>
                            </div>
                            <div class="freelancer-info">
                                <div class="freelancer-header">
                                    <h5>Анна В.</h5>
                                    <span class="rating"><i class="fas fa-star"></i> 4.9</span>
                                </div>
                                <p class="freelancer-role">Senior UI/UX Designer</p>
                                <div class="freelancer-skills">
                                    <span>Figma</span>
                                    <span>Prototyping</span>
                                </div>
                                <button class="btn-small-primary">Пригласить</button>
                            </div>
                        </div>

                        <div class="freelancer-card glass-card">
                            <div class="freelancer-video">
                                <img src="https://images.unsplash.com/photo-1560250097-0b93528c311a?w=400" alt="Video">
                                <div class="play-icon"><i class="fas fa-play"></i></div>
                            </div>
                            <div class="freelancer-info">
                                <div class="freelancer-header">
                                    <h5>Максим К.</h5>
                                    <span class="rating"><i class="fas fa-star"></i> 5.0</span>
                                </div>
                                <p class="freelancer-role">Frontend Developer</p>
                                <div class="freelancer-skills">
                                    <span>React</span>
                                    <span>Vue.js</span>
                                </div>
                                <button class="btn-small-primary">Пригласить</button>
                            </div>
                        </div>
                    </div>

                    <!-- Templates -->
                    <div class="recommendation-group" style="margin-top: 20px;">
                        <h4 class="group-title"
                            style="margin-bottom: 15px; font-size: 14px; color: var(--text-secondary);">
                            Шаблоны проектов
                        </h4>
                        <div class="ai-item">
                            <div class="ai-icon"><i class="fas fa-file-invoice"></i></div>
                            <div>
                                <div class="ai-item-title">ТЗ для E-commerce</div>
                                <div class="ai-item-text">Готовый шаблон</div>
                            </div>
                        </div>
                        <div class="ai-item">
                            <div class="ai-icon"><i class="fas fa-mobile-alt"></i></div>
                            <div>
                                <div class="ai-item-title">Бриф на моб. приложение</div>
                                <div class="ai-item-text">Популярный</div>
                            </div>
                        </div>
                    </div>
                </section>
            </aside>

            <!-- CENTER COLUMN (50%) - Лента активности -->
            <!-- CENTER COLUMN (50%) - Активные проекты -->
            <main class="dashboard-center">
                <section class="projects-section">
                    <div class="section-header-inline">
                        <h2 class="section-title-small">Активные проекты</h2>
                        <a href="marketplace.html" class="btn-text">Все проекты →</a>
                    </div>

                    <div class="projects-list">
                        <!-- Project 1 -->
                        <div class="project-card glass-card">
                            <div class="project-header">
                                <div class="project-badge neon-glow-blue">UI/UX Design</div>
                                <div class="project-status status-active">В работе</div>
                            </div>
                            <h3 class="project-title">Редизайн мобильного приложения</h3>
                            <div class="project-meta-row">
                                <span class="meta-item"><i class="far fa-clock"></i> Дедлайн: 15 дек</span>
                                <span class="meta-item"><i class="fas fa-layer-group"></i> Этап: Прототипирование</span>
                            </div>
                            <div class="project-team">
                                <div class="team-avatars">
                                    <img src="https://images.unsplash.com/photo-1573496359142-b8d87734a5a2?w=100"
                                         class="avatar-small">
                                    <img src="https://images.unsplash.com/photo-1560250097-0b93528c311a?w=100"
                                         class="avatar-small">
                                    <img src="https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?w=100"
                                         class="avatar-small">
                                </div>
                            </div>
                            <div class="project-progress">
                                <div class="progress-header">
                                    <span class="progress-label">Прогресс</span>
                                    <span class="progress-value">75%</span>
                                </div>
                                <div class="progress-bar">
                                    <div class="progress-fill"
                                         style="width: 75%; background: linear-gradient(90deg, var(--neon-blue), var(--neon-purple));">
                                    </div>
                                </div>
                            </div>
                            <div class="project-footer">
                                <button class="btn-primary-outline"
                                        onclick="window.location.href='project-details.html'">
                                    Перейти к проекту
                                </button>
                            </div>
                        </div>

                        <!-- Project 2 -->
                        <div class="project-card glass-card">
                            <div class="project-header">
                                <div class="project-badge neon-glow-pink">Web Development</div>
                                <div class="project-status status-active">В работе</div>
                            </div>
                            <h3 class="project-title">Лендинг для стартапа</h3>
                            <div class="project-meta-row">
                                <span class="meta-item"><i class="far fa-clock"></i> Дедлайн: 20 дек</span>
                                <span class="meta-item"><i class="fas fa-code"></i> Этап: Верстка</span>
                            </div>
                            <div class="project-team">
                                <div class="team-avatars">
                                    <img src="https://images.unsplash.com/photo-1438761681033-6461ffad8d80?w=100"
                                         class="avatar-small">
                                    <img src="https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?w=100"
                                         class="avatar-small">
                                </div>
                            </div>
                            <div class="project-progress">
                                <div class="progress-header">
                                    <span class="progress-label">Прогресс</span>
                                    <span class="progress-value">45%</span>
                                </div>
                                <div class="progress-bar">
                                    <div class="progress-fill"
                                         style="width: 45%; background: linear-gradient(90deg, var(--neon-pink), var(--neon-purple));">
                                    </div>
                                </div>
                            </div>
                            <div class="project-footer">
                                <button class="btn-primary-outline"
                                        onclick="window.location.href='project-details.html'">
                                    Перейти к проекту
                                </button>
                            </div>
                        </div>
                    </div>
                </section>
            </main>

            <!-- RIGHT COLUMN (20%) - Быстрые действия -->
            <!-- RIGHT COLUMN (20%) - Уведомления -->
            <aside class="dashboard-right">
                <section class="notifications-section">
                    <div class="section-header-inline">
                        <h3 class="section-title-compact">🔔 Уведомления</h3>
                        <button class="btn-icon-small"><i class="fas fa-cog"></i></button>
                    </div>

                    <div class="notification-filters">
                        <button class="filter-pill active">Все</button>
                        <button class="filter-pill">Важные</button>
                        <button class="filter-pill">Системные</button>
                    </div>

                    <div class="notifications-list">
                        <div class="notification-item unread">
                            <div class="notif-icon">
                                <i class="fas fa-briefcase" style="color: var(--neon-blue);"></i>
                            </div>
                            <div class="notif-content">
                                <p><strong>Новый отклик</strong> на проект "E-commerce"</p>
                                <span class="time">5 мин назад</span>
                            </div>
                        </div>

                        <div class="notification-item unread">
                            <div class="notif-icon">
                                <i class="fas fa-comment-alt" style="color: var(--neon-pink);"></i>
                            </div>
                            <div class="notif-content">
                                <p><strong>Сообщение</strong> от Mike K.</p>
                                <span class="time">15 мин назад</span>
                            </div>
                        </div>

                        <div class="notification-item">
                            <div class="notif-icon">
                                <i class="fas fa-check-circle"
                                   style="color: var(--neon-green);"></i>
                            </div>
                            <div class="notif-content">
                                <p>Проект <strong>Лендинг</strong> завершен</p>
                                <span class="time">1 час назад</span>
                            </div>
                        </div>

                        <div class="notification-item">
                            <div class="notif-icon">
                                <i class="fas fa-wallet" style="color: var(--neon-purple);"></i>
                            </div>
                            <div class="notif-content">
                                <p>Поступление средств: <strong>+$3,500</strong></p>
                                <span class="time">2 часа назад</span>
                            </div>
                        </div>
                    </div>

                    <button class="btn-view-all">Показать все</button>
                </section>
            </aside>

        </div>
    </main>

    <!-- SVG Gradients -->
    <svg width="0" height="0" style="position: absolute;">
        <defs>
            <linearGradient id="gradient-blue" x1="0%" y1="0%" x2="100%" y2="100%">
                <stop offset="0%" style="stop-color:#00d4ff;stop-opacity:1" />
                <stop offset="100%" style="stop-color:#0099ff;stop-opacity:1" />
            </linearGradient>
            <linearGradient id="gradient-pink" x1="0%" y1="0%" x2="100%" y2="100%">
                <stop offset="0%" style="stop-color:#ff0080;stop-opacity:1" />
                <stop offset="100%" style="stop-color:#ff6ec7;stop-opacity:1" />
            </linearGradient>
            <linearGradient id="gradient-purple" x1="0%" y1="0%" x2="100%" y2="100%">
                <stop offset="0%" style="stop-color:#b000ff;stop-opacity:1" />
                <stop offset="100%" style="stop-color:#7000ff;stop-opacity:1" />
            </linearGradient>
            <linearGradient id="gradient-cyan" x1="0%" y1="0%" x2="100%" y2="100%">
                <stop offset="0%" style="stop-color:#00fff5;stop-opacity:1" />
                <stop offset="100%" style="stop-color:#00ccff;stop-opacity:1" />
            </linearGradient>
        </defs>
    </svg>

    <script src="~/js/script.js"></script>
    <!-- Production: src="script.js" -->
</body>